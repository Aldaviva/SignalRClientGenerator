<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <IncludeBuildOutput>false</IncludeBuildOutput> <!-- Do not include the generator as a lib dependency -->
        <Version>0.0.7</Version>
        <Authors>Ben Hutchison</Authors>
        <Copyright>Â© 2025 $(Authors)</Copyright>
        <Company>$(Authors)</Company>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/Aldaviva/SignalRClientGenerator</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Aldaviva/SignalRClientGenerator.git</RepositoryUrl>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <Description>Automatically generate a strongly-typed, type-safe client for a SignalR server based on shared interfaces.</Description>
        <PackageTags>signalr client sourcegenerator source-generator generator hubconnection websockets strongly-typed type-safe autogenerated</PackageTags>
        <PackageReadmeFile>Readme.md</PackageReadmeFile>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
    </PropertyGroup>

    <!-- Provided-only dependencies to compile and run the generator, as well as dependencies to compile and run the generated code, but not other dependencies to compile or run the generator -->
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="8.0.22" />
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="4.14.0" PrivateAssets="all" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="5.0.0" PrivateAssets="all" />
    </ItemGroup>

    <!-- Non-provided dependencies to compile and run the generator, but not to compile or run the generated code in a consumer -->
    <ItemGroup>
        <PackageReference Include="Unfucked" Version="0.0.1-beta.26" GeneratePathProperty="true" PrivateAssets="all" />
        <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="10.0.0" GeneratePathProperty="true" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\Readme.md" Pack="true" PackagePath="\" />

        <!-- Package the generator in the analyzer directory of the nuget package -->
        <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />

        <!-- Package the dependencies alongside the generator assembly -->
        <None Include="$(PKGUnfucked)\lib\netstandard2.0\Unfucked.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
        <None Include="$(PKGMicrosoft_Bcl_AsyncInterfaces)\lib\netstandard2.0\Microsoft.Bcl.AsyncInterfaces.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>

</Project>